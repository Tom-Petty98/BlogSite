@{
  ViewData["Title"] = "Topics";
  Layout = "_Layout";
}
@using Bagombo.Models.ViewModels.Home
@model TopicsViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Topics</h3>
            <hr />
        </div>
    </div>
    @foreach (var topic in Model.Topics)
    {
      <div class="row">
          <div class="col-md-12">
              <div class="card mb-4">
                  <div class="card-body">
                      <h3>
                          @topic.Title
                      </h3>
                      <hr />
                      <h5>
                          @topic.Description
                      </h5>
                      <br />
                      <a class="btn btn-primary" asp-action="TopicPosts" asp-route-id="@topic.Id">See Posts... <span class="badge">@topic.BlogCount</span></a>
                  </div>
              </div>
          </div>
      </div>

    }
</div>

